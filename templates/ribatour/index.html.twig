{% extends 'base.html.twig' %}
{% block title  %} RIBATOUR {% endblock %}
{% block body %}
    <section class="banner-one" style="background-image: url({{asset('images/backgrounds/ribatour-tours.jpg')}});">
        <div class="container">
            <h2>Visiter <span>le Maroc</span></h2>
            <p>Où voudrais-tu aller?</p>
            <form class="tour-search-one">
                <div class="tour-search-one__inner">
                    <div class="tour-search-one__inputs">
                        <div class="tour-search-one__input-box">
                            <label for="place">Excursion</label>
                            <input type="text" placeholder="Excursion 3 Vallées" name="place" id="place">
                        </div><!-- /.tour-search-one__input-box -->
                        <div class="tour-search-one__input-box">
                            <label for="when">Ville</label>
                            <input type="text" placeholder="Marrakech" name="when" id="when">
                        </div><!-- /.tour-search-one__input-box -->
                        <div class="tour-search-one__input-box">
                            <label for="type">Date</label>
                            <input type="date" id="date" name="date">
                        </div><!-- /.tour-search-one__input-box -->
                    </div><!-- /.tour-search-one__inputs -->
                    <div class="tour-search-one__btn-wrap">
                        <a class="thm-btn tour-search-one__btn" style="text-align: center" href="{{path('excursions')}}">Chercher</a>
                    </div><!-- /.tour-search-one__btn-wrap -->
                </div><!-- /.tour-search-one__inner -->
            </form><!-- /.tour-search-one -->
        </div><!-- /.container -->
    </section><!-- /.banner-one -->
    <section class="features-one__title">
        <div class="container">
            <div class="block-title text-center">
                <p>APPELEZ NOS AGENTS POUR RÉSERVER!</p>
                <h3>Voyager avec le meilleur <br> opérateur de Marrakech</h3>
            </div><!-- /.block-title -->
        </div><!-- /.container -->
    </section><!-- /.features-one__title -->
    <section class="features-one__content">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-duration="1500ms" data-wow-delay="000ms">
                    <div class="features-one__single">
                        <i class=" tripo-icon-tour-guide"></i>
                        <h3>Guides locaux<br>  <br>  </h3>
                    </div><!-- /.features-one__single -->
                </div><!-- /.col-lg-3 col-md-6 -->
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-duration="1500ms" data-wow-delay="100ms">
                    <div class="features-one__single">
                        <i class=" tripo-icon-reliability"></i>
                        <h3>100% Agence de voyages <br> de confiance</h3>
                    </div><!-- /.features-one__single -->
                </div><!-- /.col-lg-3 col-md-6 -->
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-duration="1500ms" data-wow-delay="200ms">
                    <div class="features-one__single">
                        <i class=" tripo-icon-user-experience"></i>
                        <h3>28+ Années de voyage <br> et d'expérience</h3>
                    </div><!-- /.features-one__single -->
                </div><!-- /.col-lg-3 col-md-6 -->
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-duration="1500ms" data-wow-delay="300ms">
                    <div class="features-one__single">
                        <i class=" tripo-icon-feedback"></i>
                        <h3>98% Nos voyageurs <br> sont heureux</h3>
                    </div><!-- /.features-one__single -->
                </div><!-- /.col-lg-3 col-md-6 -->
            </div><!-- /.row -->
        </div><!-- /.container -->
    </section><!-- /.features-one__content -->
    <section class="tour-one">
        <div class="container">
            <div class="block-title text-center">
                <p>TOURS EN VEDETTE</p>
                <h3>Tours les plus populaires</h3>
            </div><!-- /.block-title -->
            <div class="row">
                {% for excursion in excursions %}
                    <div class="col-xl-4 col-lg-6">
                        <div class="tour-one__single">
                            <div class="tour-one__image">
                                <img src="{{ asset('photos/excursions/'~excursion.images) }}" alt="">
                                <a href="#"><i class="fa fa-heart"></i></a>
                            </div><!-- /.tour-one__image -->
                            <div class="tour-one__content">
                                <div class="tour-one__stars"><i class="fas fa-map-marker-alt"></i>
                                    {{excursion.ville}}
                                </div><!-- /.tour-one__ville -->
                                <h3><a href="{{path('excursion_show',{'id': excursion.id})}}">{{excursion.nom}}</a></h3>
                                <p><span>{{excursion.prixadulte}}$</span> / Prix adulte
                                <span class="ma">{{excursion.prixenfant}}$</span> / prix enfant</p>
                            </div><!-- /.tour-one__content -->
                        </div><!-- /.tour-one__single -->
                    </div><!-- /.col-lg-4 -->
                {% endfor %}
            </div><!-- /.row -->
        </div><!-- /.container -->
    </section><!-- /.tour-one -->
{% endblock %}