{% extends 'base.html.twig' %}
{% block title  %} {% endblock %}
{% block body %}
    <nav id="nav" role="navigation">
        <a href="#nav" title="Show navigation">Afficher navigation</a>
        <a href="#" title="Hide navigation">Masque navigation</a>

        <ul class="clearfix container">
            <li class=""><a href="{{ path('ribatour') }}"> Accueil</a></li>
            <li class=""><a href="{{ path('excursions') }}">Excursions </a></li>
            <li class=""><a href="{{ path('transferts') }}">Transferts </a></li>
            <li class=""><a href="{{ path('about') }}">Qui sommes nous ? </a></li>
            <li class="active"><a href="{{ path('contact') }}">Contact </a></li>
        </ul>
    </nav>

    <div class="page-content page-about inner-page">

        <div class="container">
            <div class="row">
                <h1 class="page-title title-style-2"> Contactez Nous </h1>
            </div>
        </div>

        <div class="inner-page-content">

            <div class="container">

                <div class="container-fluid">

                    <div class="row">

                        <div class="col-md-6">

                            <h2 class="title-style-3">Formilaire de contact <span class="title-under"></span></h2>
                            <div class="contact-form">


                                <form role="form" class="contact-from" method="POST" action="#">

                                    <div class="form-group">
                                        <input type="text" class="form-control" id="" name="nom" placeholder="Nom" required>
                                    </div>

                                    <div class="form-group">
                                        <input type="text" class="form-control" id="" name="prenom" placeholder="Prenom" required>
                                    </div>

                                    <div class="form-group">
                                        <input type="email" class="form-control" id="" name="email" placeholder="Email" required>
                                    </div>

                                    <div class="form-group">
                                        <input type="text" class="form-control" id="" name="tel" placeholder="Tel." required>
                                    </div>

                                    <div class="form-group">
                                        <textarea name="message" class="form-control contact-msg" placeholder="Message"></textarea>
                                    </div>

                                    <div class="form-group">
                                        <button class="btn-style-1" type="submit">Envoyer</button>
                                    </div>

                                </form>

                            </div>

                        </div>
                        <div class="col-md-6">
                            <h2 class="title-style-3">Informations agence <span class="title-under"></span></h2>
                            <div class="container-fluid contact-info">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="contact-item">

                                    <span class="item-icon circle-icon">
                                       <span class="icons-contact-phone"></span>
                                    </span>
                                            <h4 class="item-title">Téléphone</h4>
                                            <div class="item-content">
                                                +212 245 111 000                                    </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">

                                        <div class="contact-item">

                                    <span class="item-icon circle-icon">
                                       <span class="icons-contact-email"></span>
                                    </span>
                                            <h4 class="item-title">Email</h4>
                                            <div class="item-content">
                                                contact@ribatour.com
                                            </div>

                                        </div>
                                    </div>

                                    <div class="col-md-12">

                                        <div class="contact-item">

                                    <span class="item-icon circle-icon">
                                       <span class="icons-contact-marker"></span>
                                    </span>
                                            <h4 class="item-title">Localisation</h4>
                                            <div class="item-content">
                                                Rue Outman Appt 10 N 586
                                                40000, MARRAKECH - MOROCCO
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- /.row -->
                </div>
            </div>
            <div class="contact-map-section text-center">
                <div class="container">
                    <h2 class="title-style-3 ">Sur le Map</h2>
                    <div id="map-canvas">
                    </div>
                </div>
            </div>
        </div> <!-- /.inner-page-content -->
    </div>
{% endblock %}