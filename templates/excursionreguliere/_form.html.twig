{% extends 'excursion/dashboard_base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-6">
            <img src="{{ asset('photos/excursionregulieres/'~excursionreguliere.image) }}" style="width:80%" alt="{{ excursionreguliere.nomfr }}">
            <div>{{ form_row(form.imagesFile) }}</div>
            <div>{{ form_row(form.envedette,{ "label":" En Vedette ?" }) }}</div>
        </div>
        <div class="col-6">
            <h3 class="titre">Nom :</h3>
            <div>{{ form_row(form.nomfr)}}</div>
            <div>{{ form_row(form.nomes)}}</div>
            <div>{{ form_row(form.nomen)}}</div>
        </div>
        <div class="col-12">
            <h3 class="titre">Presentation :</h3>
            {{ form_row(form.presentationfr) }}
            {{ form_row(form.presentationes) }}
            {{ form_row(form.presentationen) }}
        </div>
    </div>
    {{ form_widget(form) }}
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <button class="btn">{{ button_label|default('Save') }}</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
