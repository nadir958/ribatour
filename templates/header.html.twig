{% block header %}
    <div class="site-header__header-one-wrap">
        <div class="topbar-one">
            <div class="container-fluid">
                <div class="topbar-one__left">
                    <a href="mailto:contact@ribatour.com">contact@ribatours.com</a>
                    <a href="tel:+212 245 111 000">+212 245 111 000</a>
                    <a href="#">Rue Outman Appt 10 N 586
                        40000, MARRAKECH - MOROCCO</a>
                </div><!-- /.topbar-one__left -->
                <div class="topbar-one__right">
                    <div class="topbar-one__social">
                        <a href="#"><i class="fab fa-facebook-square"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                    </div><!-- /.toone__right -->
                    {% for locale in locales %}
                        {% if locale != app.request.locale %}
                                <a href="{{ path('change_locale',{'locale':locale}) }}" class="topbar-one__guide-btn">{{locale}}</a>
                        {% endif %}
                    {% endfor %}

                </div><!-- /.containepbar-one__social -->
            </div><!-- /.topbar-r-fluid -->
        </div><!-- /.topbar-one -->
        <header role="banner" class="main-nav__header-one">
            <nav class="header-navigation stricky">
                <div class="container" >
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="main-nav__logo-box">
                        <a href="{{ path('ribatour') }}" class="main-nav__logo">
                            <img src="{{asset('images/travelagency-logo.png')}}"  width="123" class="main-logo" alt="Ribators logo" />
                        </a>
                        <a href="#" class="side-menu__toggler"><i class="fa fa-bars"></i>
                            <!-- /.smpl-icon-menu --></a>
                    </div><!-- /.logo-box -->
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    {% set route_name = app.request.attributes.get('_route') %}
                    <div class="main-nav__main-navigation">
                        <ul class=" main-nav__navigation-box">
                            <li {% if route_name == "ribatour" %} class="current" {% else %} class="nav-item" {% endif %} >
                                <a href="{{ path('ribatour') }}">{% trans %}Home{% endtrans %}</a>
                            </li>
                            <li {% if route_name == "excursions" %} class="current" {% else %} class="nav-item" {% endif %} >
                                <a href="{{ path('excursions') }}">{% trans %}Excursions{% endtrans %}</a>
                            </li>
                            <li {% if route_name == "about" %} class="current" {% else %} class="nav-item" {% endif %} >
                            <a href="{{ path('about') }}">{% trans %}About Us{% endtrans %}</a>
                            </li>
                            <li {% if route_name == "contact" %} class="current" {% else %} class="nav-item" {% endif %} >
                            <a href="{{ path('contact') }}">{% trans %}Contact Us{% endtrans %}</a>
                            </li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                    <div class="main-nav__right">
                        <a href="{{ path('app_login') }}" class="main-nav__login"><i class="tripo-icon-avatar"></i></a>
                    </div><!-- /.main-nav__right -->
                </div>
                <!-- /.container -->
            </nav>
        </header><!-- /.site-header -->
    </div><!-- /.site-header__header-one-wrap -->

    <div class="side-menu__block">
        <div class="side-menu__block-overlay custom-cursor__overlay">
            <div class="cursor"></div>
            <div class="cursor-follower"></div>
        </div><!-- /.side-menu__block-overlay -->
        <div class="side-menu__block-inner ">
            <div class="side-menu__top justify-content-end">
                <a href="#" class="side-menu__toggler side-menu__close-btn"><img
                            src="{{asset('images/close-1-1.png')}}" alt=""></a>
            </div><!-- /.side-menu__top -->
            <nav class="mobile-nav__container">
                <!-- content is loading via js -->
            </nav><br>
            <div class="text-center">
                {% for locale in locales %}
                    {% if locale != app.request.locale %}
                        <a href="{{ path('change_locale',{'locale':locale}) }}" class="topbar-one__guide-btn text-align-center">{{locale}}</a>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="side-menu__sep"></div><!-- /.side-menu__sep -->
            <div class="side-menu__content">
                <p>{% trans %}Ribat Tours is a travel and tourism agency, created in March 1983 and approved by the Ministry of Tourism in Morocco.
                        Ribat Tours specializes in cultural and sporting trips, trekking of all kinds, stays, Ã  la carte trips and also your own proposal.{% endtrans %}</p>
                <p><a href="mailto:contact@ribatour.com">contact@ribatours.com</a> <br> <a href="tel:+212 245 111 000">+212 245 111 000</a></p>
                <div class="side-menu__social">
                    <a href="#"><i class="fab fa-facebook-square"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-pinterest-p"></i></a>
                </div>
            </div><!-- /.side-menu__content -->
        </div><!-- /.side-menu__block-inner -->
    </div><!-- /.side-menu__block -->

{% endblock %}